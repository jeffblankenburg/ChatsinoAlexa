{
    "type": "APL",
    "version": "1.4",
    "settings": {},
    "theme": "dark",
    "import": [
        {
      "name": "alexa-layouts",
      "version": "1.2.0"
    }],
    "resources": [],
    "styles": {},
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {
        "CardImage": {
            "description": "A basic header with a title and a logo",
            "parameters": [
              {
                  "name": "suit",
                  "type": "string"
              },
              {
                  "name": "value",
                  "type": "string"
              },
              {
                  "name": "isHeld",
                  "type": "boolean"
              }
            ],
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "Frame",
                            "height": "4vh",
                            "width": "19vw",
                            "item": {
                                "type": "Text",
                                "text": "${isHeld == true ? 'HELD' : ' '}",
                                "fontSize": "20dp",
                                "textAlign": "center",
                                "width": "100%",
                                "fontWeight": "bold"
                            }
                        },
                        {
                            "type": "TouchWrapper",
                            "onPress": {
                                "type": "SendEvent",
                                "arguments": [
                                    "${isHeld == true ? 'PokerDrop' : 'PokerHold'}", "${suit}", "${value}"
                                ]
                            },
                            "item": {
                                "type": "Frame",
                                "height": "45vh",
                                "width": "19vw",
                                "backgroundColor": "white",
                                "item": {
                                  "type": "AlexaImage",
                                  "imageSource": "https://s3.amazonaws.com/jeffblankenburg.alexa/chatsino/art/cards/${value}_of_${suit}.png",
                                  "imageRoundedCorner": true,
                                  "imageScale": "best-fit",
                                  "imageAlignment": "center",
                                  "imageHeight": "100%",
                                  "imageBlurredBackground": false
                                    
                                }
                            }
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "pokerData"
        ],
        "items": [
            {
                "type": "Container",
                "height": "100vh",
                "width": "100vw",
                "paddingTop": "0dp",
                "paddingLeft": "0dp",
                "paddingRight": "0dp",
                "paddingBottom": "0dp",
                "alignItems": "center",
                "item": {
                    "type": "Frame",
                    "backgroundColor": "blue",
                    "width": "100%",
                    "height": "100%",
                    "item": {
                        "type": "Container",
                        "width": "100%",
                        "height": "100%",
                        "items": [
                            {
                                "type": "Text",
                                "text": "TWO PAIR",
                                "fontSize": "40dp",
                                "fontWeight": "bold",
                                "textAlign": "center",
                                "color": "yellow"
                            },
                            {
                                "type": "Container",
                                "height": "50vh",
                                "width": "100%",
                                "paddingTop": "1vh",
                                "paddingLeft": "1vw",
                                "paddingRight": "1vw",
                                "paddingBottom": "1vh",
                                "direction": "row",
                                "alignItems": "center",
                                "justifyContent": "spaceBetween",
                                "items": [
                                    {
                                    	"type": "CardImage",
                                    	"suit": "${pokerData.cards[0].suit}",
                                    	"value": "${pokerData.cards[0].value}",
                                    	"isHeld": "${pokerData.cards[0].isHeld}"
                                    },
                                    {
                                    	"type": "CardImage",
                                    	"suit": "${pokerData.cards[1].suit}",
                                    	"value": "${pokerData.cards[1].value}",
                                    	"isHeld": "${pokerData.cards[1].isHeld}"
                                    },
                                    {
                                    	"type": "CardImage",
                                    	"suit": "${pokerData.cards[2].suit}",
                                    	"value": "${pokerData.cards[2].value}",
                                    	"isHeld": "${pokerData.cards[2].isHeld}"
                                    },
                                    {
                                    	"type": "CardImage",
                                    	"suit": "${pokerData.cards[3].suit}",
                                    	"value": "${pokerData.cards[3].value}",
                                    	"isHeld": "${pokerData.cards[3].isHeld}"
                                    },
                                    {
                                    	"type": "CardImage",
                                    	"suit": "${pokerData.cards[4].suit}",
                                    	"value": "${pokerData.cards[4].value}",
                                    	"isHeld": "${pokerData.cards[4].isHeld}"
                                    }
                                ]
                            },
                            {
                                "type": "Container",
                                "height": "50vh",
                                "width": "100%",
                                "paddingTop": "1vh",
                                "paddingLeft": "1vw",
                                "paddingRight": "1vw",
                                "paddingBottom": "1vh",
                                "direction": "row",
                                "items": [
                                    {
                                        "type": "Text",
                                        "text": "$10748"
                                    },
                                    {
                                      "type": "AlexaButton",
                                      "buttonText": "DEAL",
                                      "id": "containedButtonId",
                                      "primaryAction": {
                                        "type": "SendEvent",
                                        "componentId": "containedButtonId",
                                        "arguments": [
                                          "contained"
                                        ]
                                      }
                                     }
                                ]
                            }
                        ]
                    }
                }
            }
        ]
    }
}